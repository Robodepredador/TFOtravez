<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" stylesheets="@css/adjuntar.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bolsalaboralapp.AñadirArchivoController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Adjuntar archivos" />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnSeleccionarArchivo" onAction="#seleccionarArchivo" text="Seleccionar archivo" />
        <Label fx:id="lblNombreArchivo" text="Ningún archivo seleccionado" />
    </HBox>

    <ListView fx:id="listaArchivos" maxWidth="300" maxHeight="150" prefWidth="300" />

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnAceptar" onAction="#aceptar" text="Aceptar" />
        <Button fx:id="btnCancelar" onAction="#cancelar" text="Cancelar" />
    </HBox>
</VBox>